<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter xmlns="https://github.com/spotbugs/filter/3.0.0"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="https://github.com/spotbugs/filter/3.0.0 
                https://raw.githubusercontent.com/spotbugs/spotbugs/3.1.0/spotbugs/etc/findbugsfilter.xsd">
    
    <!--
        SpotBugs Security Exclusions for NPCI Transfer Service
        
        Excludes false positives while keeping security checks active
    -->
    
    <!-- Exclude Lombok generated code from security checks -->
    <Match>
        <Class name="~.*\..*Builder"/>
    </Match>
    
    <!-- Exclude test data builders -->
    <Match>
        <Class name="~.*TestDataBuilders.*"/>
    </Match>
    
    <!-- Exclude Spring Boot main application class -->
    <Match>
        <Class name="~.*Application"/>
        <Method name="main"/>
    </Match>
    
    <!-- Exclude DTOs from certain checks (they're simple data carriers) -->
    <Match>
        <Class name="~.*\.dto\..*"/>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
    </Match>
    
    <!-- Keep ALL security-related bugs active -->
    <!-- Do NOT exclude:
         - SQL_INJECTION (SQL injection)
         - PATH_TRAVERSAL (path traversal)
         - COMMAND_INJECTION (OS command injection)
         - XSS (cross-site scripting)
         - WEAK_CRYPTO (weak cryptography)
         - HARD_CODE_PASSWORD (hardcoded credentials)
    -->
    
</FindBugsFilter>
